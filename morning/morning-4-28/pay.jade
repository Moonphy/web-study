extends layout

block styleblock
    link(rel='stylesheet',href='css/pay.css')

block content
    include _header
    .pay_body
        h1 订单确认
        .pay_block
            .pay_title 商品列表
        .good_list
            ul.thead
                li.td1 商品
                li.td2 材质
                li.td3 颜色
                li.td4 尺码
                li.td5 单价（元）
                li.td6 数量（件）
                li.td7 小计（元）
            - for(var i=0; i<2; i++)
                ul.tbody
                    li.td1
                        p 商品编号：
                            span ABCEDFG1234567
                        a(href='detail.html',title='',target='_blank') 新款时尚流行圆头拉链皮革拼接磨砂皮女鞋hhhhhh
                        a.img(href='detail.html',title=''): img(src='images/examples/good_block_img.png',alt='')
                    li.td2 压花水牛皮
                    li.td3 黑色
                    li.td4 245/39
                    li.td5 599.00
                    li.td6 1
                    li.td7 599.00
        .pay_block
            .pay_title 收货地址
            ul
                li 姓名：<span>张三</span>
                li 手机：<span id="phone">13631365214</span>
                li 所在地区：<span>广东省</span><span>广州市</span><span>白云区</span>
                li 详细地址：<span>广花一路633号平沙国际商务中心502室</span>
                li 邮编：（<span>510440</span>）
        .pay_block
            .pay_title 支付方式
            .style_information
                .style1 支付宝
                .style2 微信支付
        .pay
            .have_select 商品件数：<i>8</i>件
            .price_total 应付总额：<span>408.00</span>元
            .settle_btn 立即下单

    include _footer

block jsblock
    script(type='text/javascript').
        $(document).ready(function(){
            var phone = $("#phone").text();
            var mphone =phone.substr(3,4);
            var lphone = phone.replace(mphone,"****");
            $("#phone").text(lphone);
        });