extends layout
block styleblock
    link(rel='stylesheet',href='css/home_address.css')
block content
    include _header
    .home_body
        .home_main
            .home_main_left.fl
                .left_part
                    ul
                        .part_title 个人中心
                        li: a(href='home.html',title='') 我的账户
                        li: a(href='home_favorite.html',title='') 我的徽章
                        li: a(href='home_like.html',title='') 我关注的商品
                        li: a(href='home_seen.html',title='') 我看过的商品
                        li: a(href='home_favorite.html',title='') 我收藏的商品
                .left_part
                    ul
                        .part_title 我的订单
                        li: a(href='home_orders.html',title='') 所有订单
                        li.selected: a(href='home_address.html',title='') 收货地址管理
                .left_part
                    ul
                        .part_title_2: a(href='',title='') 买家秀
                .left_part
                    ul
                        .part_title 我的优惠
                        li: a(href='',title='') 我的红包
                        li: a(href='',title='') 我的积分
                .left_part
                    ul
                        .part_title_2: a(href='cart.html',title='') 购物车
                .left_part
                    ul
                        .part_title 安全中心
                        li: a(href='home_address.html',title='') 身份认证
                        li: a(href='change_password.html',title='') 修改密码
                        li: a(href='change_password.html',title='') 修改邮箱
                        li: a(href='change_password.html',title='') 手机绑定
            .home_main_right.fr
                .user_home_header
                    .user_img.fl
                        img(src='images/personal_head.png')
                    .user_name.fl
                        .name 萌萌哒小妹纸，<span>下午好~</span>！
                            i.female
                            i.male
                        span#phone 13912348888
                        .user_edit <span>22</span>人赞了你的晒单秀
                    .checkins
                        button 签到
                        p.count_checkins 你已连续<span>20</span>天签到
                        p.tips 连续签到，更多红包！
                    .hongbao
                        p.hongbao_h 收到的红包
                        p <span>12</span>元
                        p.hongbao_b 亲，有<span>10</span>元红包即将到期
                .user_home_list
                    .list_title 管理收货地址
                    .address
                        .address_main.default.selected
                            .address_delete_btn ×
                            .username 张三
                                span.default_address （默认收货地址）
                            .personal
                                .telephone 138****8888
                                .address_big
                                    span 广东省
                                    span 广州市
                                    span 白云区
                                .address_detail 广花一路633号平沙国际商务中心502室
                                .zip_code (<span>510440</span>)
                            button.edit_default 设为默认收货地址
                            button.edit_address 编辑收货地址
                            .edit_address_main
                                .address_delete_btn ×
                                form(class='newaddress',method='post')
                                    .username
                                        label 收货人：
                                        input(class='name',name='name')
                                    .personal
                                        label 手机号：
                                        input(class='telephone',name='telephone')
                                        .address_select.address_select_edit1
                                            select.prov(size='1')
                                                option 请选择...
                                            select.city(size='1')
                                                option 请选择...
                                            select.dist(size='1')
                                                option 请选择...
                                        textarea(rows='1',cols='10',class='address_detail',name='address_detail',value placeholder='详细地址：')
                                        label.zip 邮编：
                                        input.zip_code(name='zip_code')
                                        input(class='address_submit',type='submit',value='更新')
                        .address_main
                            .address_delete_btn ×
                            .username 张三
                            .personal
                                .telephone 138****8888
                                .address_big
                                    span 广东省
                                    span 广州市
                                    span 白云区
                                .address_detail 广花一路633号平沙国际商务中心502室中花胡搜id号我时候帝豪是电话覅哦收
                                .zip_code (<span>510440</span>)
                            button.edit_default 设为默认收货地址
                            button.edit_address 编辑收货地址
                            .edit_address_main
                                .add_delete_btn ×
                                form(class='newaddress',method='post')
                                    .username
                                        label 收货人：
                                        input(class='name',name='name')
                                    .personal
                                        label 手机号：
                                        input(class='telephone',name='telephone')
                                        .address_select.address_select_edit2
                                            select.prov(size='1')
                                                option 请选择...
                                            select.city(size='1')
                                                option 请选择...
                                            select.dist(size='1')
                                                option 请选择...
                                        textarea(rows='1',cols='10',class='address_detail',name='address_detail',value placeholder='详细地址：')
                                        label.zip 邮编：
                                        input.zip_code(name='zip_code')
                                        input(class='address_submit',type='submit',value='更新')
                        .add_address
                            p.img +
                            p.text 增加新地址
                        .new_address(style='display:none;')
                            .add_delete_btn ×
                            form(class='newaddress',method='post')
                                .username
                                    label 收货人：
                                    input(class='name',name='name')
                                .personal
                                    label 手机号：
                                    input(class='telephone',name='telephone')
                                    .address_select.address_select_new
                                        select.prov(size='1')
                                            option 请选择...
                                        select.city(size='1')
                                            option 请选择...
                                        select.dist(size='1')
                                            option 请选择...
                                    .hidden
                                    textarea(rows='1',cols='10',class='address_detail',name='address_detail',value placeholder='详细地址：')
                                    label.zip 邮编：
                                    input.zip_code(name='zip_code')
                                    input(class='submit',type='submit',value='确认')

    include _footer
block jsblock
    script(src='js/jquery.cityselect.js')
    script(src='js/home_address.js')
