extends layout

block styleblock
    link(rel='stylesheet',href='css/login.css')

block content
    include _header
    #login_body
        .login_title 欢迎光临36-37.com！
        .login_main
            #siteuserLoginWarning 登录错误
            form(id='signupForm',method='post',action='')
                p.clearfix
                    label(class='one telphone_lab',for='telphone') 手机号：
                    input(id='telphone',name='telphone' ,class='required',type='text',maxlength='11')
                    span 目前只支持中国大陆手机号
                p.clearfix
                    label(class='one password_lab',for='password') 密码：
                    input(id='password',type='password',class='{required:true,rangelength:[6,20]}')
                    span 6-20位大小写字母或数字
                    a.find_password(href='#') 忘记密码？
                input(type='submit',class='submit',value='立即登录')
                .reg_submit
                    a(href='reg1.html') 注册账号
            .other_ways
                .other_ways_title 第三方账号快速登录
                .weixin 微信
                .qq QQ
                .weibo 微博
    include _footer
block jsblock
    script(src='js/jquery.validate.js')
    script(src='js/jquery.metadata.js')
    script(src='js/resgin.js')