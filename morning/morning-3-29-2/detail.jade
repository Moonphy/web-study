extends layout

block styleblock
    link(rel='stylesheet',href='css/detail.css')

block content
    include _header
    .detail_body
        .good_detail
            .this_good.fl
                include _banner
                //.big_img.fl
                    .ck-slide
                        ul.ck-slide-wrapper
                            li
                                a(href='#',target='_blank'): img(src='images/examples/detail_big_img.jpg')
                            li
                                a(href='#',target='_blank'): img(src='images/examples/detail_big_img.jpg')
                            li
                                a(href='#',target='_blank'): img(src='images/examples/detail_big_img.jpg')
                            li
                                a(href='#',target='_blank'): img(src='images/examples/detail_big_img.jpg')
                            li
                                a(href='#',target='_blank'): img(src='images/examples/detail_big_img.jpg')
                        .arrow
                            a(href='javascript:;',class='ctrl-slide ck-prev') 上一张
                            a(href='javascript:;',class='ctrl-slide ck-next') 下一张
                        .ck-slidebox
                            .slidewrap
                                ul.dot-wrap
                                    li.current
                                        img(src='images/examples/good_img.png')
                                    li
                                        img(src='images/examples/good_img.png')
                                    li
                                        img(src='images/examples/good_img.png')
                                    li
                                        img(src='images/examples/good_img.png')
                                    li
                                        img(src='images/examples/good_img.png')
                .good_information.fl
                    .information_part1
                        .good_detail_title 圆头拉链皮革拼接磨砂皮粗高跟低筒靴
                        .good_tag.fl 商品编号：BE004b80138
                        .good_price.fr ¥<i>599.00</i>
                    .information_part2
                        mixin tag(title,tags)
                            .title #{title}
                            each tag in tags
                                label.f_radio.unselected #{tag}
                                    input(type='radio',name=' ',value='')
                        +tag('尺码',['245/39','250/40','220/34','225/35','230/36','235/37','240/38'])
                    .information_part3
                        .title 商品信息：
                        each item in [{k:'跟型',v:'粗跟'},{k:'适用场景',v:'日常'},{k:'鞋面材质',v:'牛皮'},{k:'跟高',v:'高跟(5-7cm)'},{k:'内里材质',v:'猪皮'},{k:'鞋底材质',v:'塑胶'},{k:'流行材质',v:'拼接撞色'},{k:'类型',v:'低筒靴'},{k:'闭合方式',v:'拉链'},{k:'女鞋头款',v:'圆头'}]
                            .tag_k #{item.k}：
                                span #{item.v}
                    .like_buy
                        .buy
                            .add_count
                                input(id='cut',type='button',value='-',name='')
                                input(id='num',type='text',value='1',name='')
                                input(id='add',type='button',value='+',name='')
                            .buy_btn: a(href='shopping.html') 立即购买
                        .add_cart 加入购物车
                        .like_share
                            .progress_bar
                                .background_bar.fl
                                    .progress
                                        .progress_link
                                        .progress_dot
                                .like_btn.fr
                            .other_ways
                                .share_qq
                                .share_weixin
                                .share_weibo

        .similar_products
            .h2 同类产品
            .ck-slide
                .similar_show
                    ul.similar_show_good
                        li
                            - for(var i=0; i<6; i++)
                                .good
                                    a(href='detail.html'): img(src='images/examples/good_img.png')
                        li
                            - for(var i=0; i<6; i++)
                                .good
                                    a(href='detail.html'): img(src='images/examples/good_img.png')
                        li
                            - for(var i=0; i<6; i++)
                                .good
                                    a(href='detail.html'): img(src='images/examples/good_img.png')

                    .similar_arrow
                        a(href='javascript:;',class='ctrl-slide similar_prev')
                        a(href='javascript:;',class='ctrl-slide similar_next')
        .similar_products
            .h2 猜你喜欢
            .ck-slide
                .similar_show
                    ul.similar_show_good
                        li
                            - for(var i=0; i<6; i++)
                                .good
                                    a(href='detail.html'): img(src='images/examples/good_img.png')
                        li
                            - for(var i=0; i<6; i++)
                                .good
                                    a(href='detail.html'): img(src='images/examples/good_img.png')
                        li
                            - for(var i=0; i<6; i++)
                                .good
                                    a(href='detail.html'): img(src='images/examples/good_img.png')
                    .similar_arrow
                        a(href='javascript:;',class='ctrl-slide similar_prev')
                        a(href='javascript:;',class='ctrl-slide similar_next')
    .custom_service

    include _footer
block jsblock
    script(src='js/detail-slider.js')
    script(src='js/imgSlider.js')
    script(src='js/detail.js')