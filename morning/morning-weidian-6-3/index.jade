    script.
        //swiper-wrapper宽度控制
        $("#content").find(".swiper-wrapper").each(function () {
            var img_w = $(this).find("img").width();
            var img_h = $(this).find("img").height();

            if(img_w >= img_h){
                $(this).height(img_h);
            }
            else{
                $(this).height(300);
            }
        });

