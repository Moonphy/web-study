extends layout

block styleblock
    link(rel='stylesheet',href='css/register.css')

block content
    #afui
        img.logo(src='images/logo.png')
        .h1 早上好时尚网
            .h4 36-37.com
        .login_wrap
            form(id='signupForm',method='post',action='')
                p.clearfix
                    input(id='username',name='username',class='required',type='text',value placeholder='手机号 / 会员名 / 邮箱')
                    label.username_warn 账号错误
                p.clearfix
                    input(id='password',name='password',class='{required:true,rangelength:[6,20]}',type='password',value placeholder='密码')
                    label.password_warn 密码错误
                input(type='submit',class='submit',value='登录')

            .other_ways
                h3 其它登录方式
                a.qq(href='#',title='')
                    img(src='images/qq.png')
                    p QQ
                a.weixin(href='#',title='')
                    img(src='images/weixin.png')
                    p 微信
                a.weibo(href='#',title='')
                    img(src='images/weibo.png')
                    p 新浪微博
            a.find_password(href='#',title='') 找回密码

        a.reg_submit(href='reg1.html') 还没有账号？现在注册
block jsblock
    script.

        var aw = $("#afui").width();
        var ah = $("#afui").height();
        var th = ah*0.05;
        if(aw>ah){
            $(".logo").css({"margin-top":th});
        }