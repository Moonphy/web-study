block content
    #afui
        header#header
            a(href='#',class='back',title='')
            h1 个人资料修改
        form#content(action='home_setting.html', method='post')
            ul.user_list
                li.user_list_header
                    a(href='cut_img.html',title='') 用户头像
                        img(src='ret',alt='')
                        span 〉
                li
                    label(for='appDate') 生日
                    input(readonly='readonly',name='appDate',id='appDate',type='text',value='1995-10-12')
                    span 〉
            p 昵称：
                input(class='name',type='text',name='',value placeholder='萌萌哒小妹子')
            p.clearh
                label.sex 性别：
                label.f_radio.selected 男
                    input(type='radio',name=' ',value='',checked='checked')
                label.f_radio.unselected 女
                    input(type='radio',name=' ',value='')
            input(class='logout_btn',type='submit',value='确认修改')

        footer
            a(href='index.html',class='home',title='')
                .img
                    img(src='images/icon/home.png',alt='')
                p 首页
            a(href='list.html',class='fenlei',title='')
                .img
                    img(src='images/icon/fenlei.png',alt='')
                p 分类
            a(href='show.html',class='show',title='')
                .img
                    img(src='images/icon/show_img.png',alt='')
                p 买家秀
            a(href='cart.html',class='cart',title='')
                .img
                    img(src='images/icon/cart.png',alt='')
                    i: span 100
                p 购物车
            a(href='home.html',class='personal selected',title='')
                .img
                    img(src='images/icon/personal.png',alt='')
                    i: span 99
                p 个人中心
