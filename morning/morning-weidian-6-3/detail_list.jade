extends layout
block styleblock
    link(rel='stylesheet',href='css/detail.css')
block content
    #afui
        #content
            a.header_cart(href='cart.html',title='')
                i: span 99
            .main_visual
                .flicking_con
                    a(href='#') 1
                    a(href='#') 2
                    a(href='#') 3
                    a(href='#') 4
                    a(href='#') 5
                .main_image
                    ul
