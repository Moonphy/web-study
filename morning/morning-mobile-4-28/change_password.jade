extends layout
block styleblock
    link(rel='stylesheet',href='css/phone_edit.css')
block content
    #afui
        header#header
            a(href='#',class='back',title='')
            h1 修改密码
        #content
            form(id='signupForm',method='post',action='')
                .center_wrap
                    label 旧密码：
                    input.password(type='password',class='{required:true,rangelength:[6,20]}')
                    p.oldpassword 旧密码错误
                .center_wrap
                    label 新密码：
                    input(id='new_password',name='new_password',type='password',class='{required:true,rangelength:[6,20]}')
                .center_wrap
                    label 确认新密码：
                    input(id='confirm_new_password',name='confirm_new_password',type='password',class='{required:true,equalTo:"#new_password"}')
                input.submit(type='submit',value='确认修改')


        footer
            a(href='index.html',class='home',title='')
                .img
                    img(src='images/icon/home.png',alt='')
                p 首页
            a(href='list.html',class='fenlei',title='')
                .img
                    img(src='images/icon/fenlei.png',alt='')
                p 分类
            a(href='show.html',class='show',title='')
                .img
                    img(src='images/icon/show_img.png',alt='')
                p 买家秀
            a(href='cart.html',class='cart',title='')
                .img
                    img(src='images/icon/cart.png',alt='')
                    i: span 100
                p 购物车
            a(href='home.html',class='personal selected',title='')
                .img
                    img(src='images/icon/personal.png',alt='')
                    i: span 99
                p 个人中心
block jsblock
    script(src='js/jquery.validate.js')
    script(src='js/jquery.metadata.js')
    script(src='js/resgin.js')
    script.
        $(".submit").click(function() {
            alert("密码修改成功，请使用新密码重新登录！");
        });