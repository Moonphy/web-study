extends layout

block styleblock
    link(rel='stylesheet',href='css/register.css')

block content
    #afui
        a(href='index.html'): img.logo(src='images/logo.png')
        .h1 早上好时尚网
            .h4 36-37.com
        .login_wrap
            form(id='signupForm',method='post',action='')
                #siteuserLoginWarning 请输入正确的手机号和密码
                p.clearfix
                    input(id='telphone',name='telphone',class='required:true,rangelength:[11,11]} ',maxlength='11',type='text',value placeholder='手机号')
                    label.username_warn 账号错误
                p.clearfix
                    input(id='password',name='password',class='{required:true,rangelength:[6,20]}',type='password',value placeholder='密码')
                    label.password_warn 密码错误
                input(type='submit',class='submit',value='登录')

            a.find_password(href='#',title='') 找回密码
            .other_ways
                h3 其它登录方式
                a.qq(href='#',title='')
                    img(src='images/qq.png')
                    p QQ
                a.weixin(href='#',title='')
                    img(src='images/weixin.png')
                    p 微信
                a.weibo(href='#',title='')
                    img(src='images/weibo.png')
                    p 新浪微博

        a.reg_submit(href='reg1.html') 还没有账号？现在注册
block jsblock
    script(src='js/jquery.validate.js')
    script(src='js/jquery.metadata.js')
    script(src='js/resgin.js')
