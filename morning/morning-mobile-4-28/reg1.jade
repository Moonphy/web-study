extends layout

block styleblock
    link(rel='stylesheet',href='css/register.css')
block content
    #afui
        a(href='index.html'): img.logo(src='images/logo.png')
        .h1 早上好时尚网
            .h4 36-37.com
        .reg_wrap
            form(id='signupForm', method='post',action='')
                p.clearfix
                    input(id='telphone',name='telphone',class='required',maxlength='11',type='text',value placeholder='手机号')
                p.clearfix
                    input(id='identifying_code',name='identifying_code',class='{required:true,equalTo:"#code"}',type='text',placeholder='验证码')
                    input(type='hidden',id='code',value='1234')
                input(id='btnSendCode',class='get_code fr',type='button',name='',value='获取验证码',onclick='sendMessage()')
                input(type='submit',class='next',value='下一步')


block jsblock
    script(src='js/jquery.validate.js')
    script(src='js/jquery.metadata.js')
    script(src='js/resgin.js')
    script(src='js/reg.js')
