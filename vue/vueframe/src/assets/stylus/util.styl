_transition()
  -webkit-transition: arguments[0] arguments[1];
  -moz-transition: arguments[0] arguments[1];
  -o-transition: arguments[0] arguments[1];
  transition: arguments[0] arguments[1];


_rotate()
  transform:rotate(arguments);
  -ms-transform:rotate(arguments);  /* IE 9 */
  -moz-transform:rotate(arguments);   /* Firefox */
  -webkit-transform:rotate(arguments); /* Safari å’Œ Chrome */
  -o-transform:rotate(arguments);   /* Opera */


_navhover()
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 0;
  margin-left: -5px;
  vertical-align: middle;
  content: " ";
  border-right: 5px solid transparent;
  border-bottom: 5px solid;
  border-left: 5px solid transparent;


_borderRadius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments

fontFace()
  font : normal normal normal 1.6rem/1 FontAwesome,sans-serif

clearfix()
  &:after
    content "\200B"
    height 0
    display block
    clear both

.hidden
  display none