@import 'color'
@import 'util'

*
  margin 0px
  padding 0px
  box-sizing  border-box


html
  height: 100%;
  margin: 0;
  font-size: 12px;
  font-family: sans-serif;

body
  margin 0
  line-height: 1.6
  height 100%

ul
  list-style none
  /*text-align center*/
  padding: 0
  margin: 0

li
  list-style-type none

a
  text-decoration none
  color #000
  &:hover
    text-decoration none
    cursor pointer

div
  padding 0

input, button, textarea, select
  border: none
  outline none

input[type="text"]
  width 180px
  height 25px

button
  color: btn-color;
  background-color: #fff;
  border-color: #ccc;
  overflow: visible;
  cursor pointer

.ttv-redcolor
  color red

.ttv-left
  float left
.ttv-right
  float right


.ttv-show
  display: block !important

.clearfix
  $clearfix()

label
  display inline-block
  max-width 100%
  margin-bottom 5px
  font-weight 700

.ttv-pr
  position absolute
  right 0

.col-2
  width 15%
.col-3
  width 25%
.col-4
  width 33%
.col-6
  width 50%
.col-8
  width 66%
.col-9
  width 75%
.col-10
  width 80%
.col-11
  width 90%
.col-11
  width 100%

.table
  width 100%
  max-width 100%
  margin 10px 0
  border-collapse collapse
  border-spacing 0
  th,td
    border: 1px solid #e4e4e4;
    background: #fff;

.table-bordered
  border 1px solid #e4e4e4
