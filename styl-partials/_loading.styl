// 元件：Loading
// ------------------------------
.mask{
  position fixed
  left 0
  right 0
  top: 0
  bottom 0
  background: rgba(0,0,0,0.6);
  text-align: center;
  z-index: 999;
}
.loading-fixed{
  position: fixed;
  left: 50%;
  top: 50%;
  width 12rem
  margin: -3rem 0 0 -6rem;
  text-align: center;
  //background: rgba(0,0,0,0.8);
  border-radius: 0.4rem;
  padding: 1rem;
  z-index: 999;
  color: #fff;
  p{
    margin-top 1rem;
  }
}

@import "./_loader"

@keyframes blink {
  0%{
    opacity: 1;
  }
  50%{
    opacity: 0;
  }
  100%{
    opacity: 1;
  }
}

.icon-loading{
  position: relative;
  width: 2rem;
  height: 2rem;
  color: grey;
  left: 50%;
  margin-left: -1rem;
  .dot{
    width: 0.2rem;
    height: 2rem;
    position: absolute;
    top:0;
    left: 50%;
    margin-left: -0.1rem;
  }
  .dot-t, .dot-b{
    position: absolute;
    left: 0;
    content: '';
    background: white;
    width: 0.2rem;
    height: 0.6rem;
    border-radius: 0.1rem;
    animation: blink 0.8s infinite ease-in-out;
    animation-fill-mode: both;
  }
  .dot-t{
    top: 0;
  }
  .dot-b{
    bottom: 0;
  }
  .dot1{
    .dot-t{
      animation-delay: -0.1s;
    }
    .dot-b{
      animation-delay: -0.5s;
    }
  }
  .dot2{
    transform: rotate(45deg);
    .dot-t{
      animation-delay: -0.2s;
    }
    .dot-b{
      animation-delay: -0.6s;
    }
  }
  .dot3{
    transform: rotate(90deg);
    .dot-t{
      animation-delay: -0.3s;
    }
    .dot-b{
      animation-delay: -0.7s;
    }
  }
  .dot4{
    transform: rotate(135deg);
    .dot-t{
      animation-delay: -0.4s;
    }
    .dot-b{
      animation-delay: -0.8s;
    }
  }
}